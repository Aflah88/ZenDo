// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk Tugas (ZenDo)
model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  priority    String   @default("MEDIUM")
  dueDate     DateTime?
  tags        String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Model untuk Reward (Barang)
model Reward {
  id        Int      @id @default(autoincrement())
  kode      String   @unique
  nama      String
  satuan    String   // Kategori (Hiburan, Makanan, dll)
  harga     Int      // Poin yang dibutuhkan
  createdAt DateTime @default(now())
}

model Barang {
  id        String   @id @default(cuid())
  kode      String   @unique
  nama      String
  satuan    String   
  harga     Int      
  stok      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}